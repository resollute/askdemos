<%= form_with(model: [@inbox, message]) do |form| %>
  <%= render 'shared/errors', form: form %>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body,
                        style: "width: 100%;",
                        autocomplete: 'off',
                        rows: 10,
                        maxlength: Message::MAX_BODY %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
