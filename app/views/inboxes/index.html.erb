<h1>
  Inboxes:
  <%= @inboxes.count %>
</h1>

<%= search_form_for @q, html: { autocomplete: "off" } do |f| %>

  # Search if the name field contains...
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>


<%= sort_link(@q, :name, default_order: :desc) %> 
<%= sort_link(@q, :created_at, default_order: :desc) %>
<%= sort_link(@q, :message_count, default_order: :desc) %>
<%= request.path %>
<%= link_to 'Refresh search', request.path if request.query_parameters.any? %>

<div id="inboxes">
  <%= render @inboxes %>
</div>
